<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive API App</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #2c3e50;
            text-align: center;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        select, button, input {
            padding: 10px;
            margin: 10px 0;
            width: 100%;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        button {
            background-color: #3498db;
            color: white;
            cursor: pointer;
        }

        button:hover {
            background-color: #2980b9;
        }

        .result {
            background-color: #ecf0f1;
            padding: 10px;
            margin-top: 20px;
            border-radius: 4px;
        }

        .error {
            color: red;
        }
    </style>
</head>
<body>
    <h1>Interactive API App</h1>
    <div class="container">
        <label for="option">Choose an option:</label>
        <select id="option">
            <option value="1">Trivia</option>
            <option value="2">GitHub Account Info</option>
            <option value="3">Joke</option>
        </select>
        <input type="text" id="inputField" placeholder="Enter info (e.g., GitHub username)" style="display: none;">
        <button onclick="handleSelection()">Get Info</button>

        <div id="result" class="result" style="display: none;"></div>
    </div>

    <script>
        function handleSelection() {
            const option = document.getElementById('option').value;
            const inputField = document.getElementById('inputField');
            const resultDiv = document.getElementById('result');
            resultDiv.style.display = "none"; // Hide previous result

            if (option == "2") {
                inputField.style.display = "block"; // Show GitHub username input
                inputField.placeholder = "Enter GitHub username";
                inputField.onkeyup = () => {
                    if (inputField.value.length > 0) {
                        getGitHubInfo(inputField.value);
                    }
                };
            } else if (option == "1") {
                inputField.style.display = "none"; // Hide the input field
                getTrivia();
            } else if (option == "3") {
                inputField.style.display = "none"; // Hide the input field
                getJoke();
            }
        }

        function getGitHubInfo(username) {
            const resultDiv = document.getElementById('result');
            const url = `https://api.github.com/users/${username}`;

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    if (data.login) {
                        resultDiv.style.display = "block";
                        resultDiv.innerHTML = `
                            <h3>GitHub Info for ${data.login}</h3>
                            <p><strong>Username:</strong> ${data.login}</p>
                            <p><strong>ID:</strong> ${data.id}</p>
                            <p><strong>Name:</strong> ${data.name || "N/A"}</p>
                            <p><strong>Twitter:</strong> ${data.twitter_username || "N/A"}</p>
                            <p><strong>Account Type:</strong> ${data.type}</p>
                        `;
                    } else {
                        resultDiv.style.display = "block";
                        resultDiv.innerHTML = "<p class='error'>User not found!</p>";
                    }
                })
                .catch(error => {
                    resultDiv.style.display = "block";
                    resultDiv.innerHTML = "<p class='error'>Failed to fetch GitHub info.</p>";
                });
        }

        function getTrivia() {
            const url = "https://opentdb.com/api.php?amount=1";
            const resultDiv = document.getElementById('result');

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    if (data.results && data.results.length > 0) {
                        const question = data.results[0];
                        resultDiv.style.display = "block";
                        resultDiv.innerHTML = `
                            <h3>Trivia Question</h3>
                            <p>${question.question}</p>
                            <p><strong>Answer:</strong> ${question.correct_answer}</p>
                        `;
                    } else {
                        resultDiv.style.display = "block";
                        resultDiv.innerHTML = "<p class='error'>Failed to fetch trivia question.</p>";
                    }
                })
                .catch(error => {
                    resultDiv.style.display = "block";
                    resultDiv.innerHTML = "<p class='error'>Error fetching trivia question.</p>";
                });
        }

        function getJoke() {
            const url = "https://v2.jokeapi.dev/joke/Any";
            const resultDiv = document.getElementById('result');

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    resultDiv.style.display = "block";
                    if (data.setup && data.delivery) {
                        resultDiv.innerHTML = `
                            <h3>Joke</h3>
                            <p><strong>Setup:</strong> ${data.setup}</p>
                            <p><strong>Delivery:</strong> ${data.delivery}</p>
                        `;
                    } else {
                        resultDiv.innerHTML = `<p class='error'>Failed to fetch a joke.</p>`;
                    }
                })
                .catch(error => {
                    resultDiv.style.display = "block";
                    resultDiv.innerHTML = "<p class='error'>Error fetching joke.</p>";
                });
        }
    </script>
</body>
</html>
